<div class='container'>
  <div class= 'row'>
    <h2 class= 'col-md-8 my-3 text-center'>Log in</h2>
  </div>

  <%= form_with model:@user, url: user_session_path do |f| %>
  <div class= 'row'>
    <div class= 'col-md-8 my-3 text-center'>
      <%= f.label :"メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class= 'row'>
    <div class= 'col-md-8 my-3 text-center'>
      <%= f.label :"パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <div class= 'row'>
    <div class= 'col-md-8 my-3 text-center'>
    <%= f.submit "Log in" %>
    </div>
  </div>
  <% end %>

  <div class= 'row'>
    <div class= 'col-md-8 my-3 text-center'>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
