<div class="container">
  <% if flash[:notice] %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  <div class="row">
    <h3 class="col-md-6 text-center">Live記録</h3>
  </div>

  <div class="row">
    <div class="col-md-6 d-flex justify-content-center">
      <table class="table table-borderless">
        <tr>
          <td>アーティスト名</td>
          <td><%= @event.name %></td>
        </tr>
        <tr>
          <td>日時</td>
          <td><%= @event.event_data %></td>
        </tr>
        <tr>
          <td>会場</td>
          <td><%= @event.place %></td>
        </tr>
        <tr>
          <td>ツアー・ライブ名</td>
          <td><%= @event.title %></td>
        </tr>
        <tr>
          <td>開場</td>
          <td><%= @event.open %></td>
        </tr>
        <tr>
          <td>開演</td>
          <td><%= @event.start %></td>
        </tr>
        <tr>
          <td>チケット料金</td>
          <td><%= @event.price %></td>
        </tr>
        <tr>
          <td>チケット購入</td>
          <td>
            <% if @event.buy_i18n == "未" %>
            <%= radio_button_tag "buy", "no_buy", checked: true %>
            <%= label_tag "buy", Event.buys_i18n[:no_buy], for: "buy_no_buy" %>
            <%= radio_button_tag "buy", "buy" %>
            <%= label_tag "buy", Event.buys_i18n[:buy], for: "buy_buy" %>
            <% elsif @event.buy_i18n == "済" %>
            <%= radio_button_tag "buy", "no_buy" %>
            <%= label_tag "buy", Event.buys_i18n[:no_buy], for: "buy_no_buy" %>
            <%= radio_button_tag "buy", "buy", checked: true %>
            <%= label_tag "buy", Event.buys_i18n[:buy], for: "buy_buy" %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>チケット画像</td>
          <td><%= image_tag @event.get_image(100,100) %></td>
        </tr>
        <tr>
          <td>座席</td>
          <td><%= @event.seet %></td>
        </tr>
        <tr>
          <td>交通手段</td>
          <td><%= @event.transportation %></td>
        </tr>
        <tr>
          <td>宿泊先</td>
          <td><%= @event.stay %></td>
        </tr>
        <tr>
          <td>感想</td>
          <td><%= @event.impression %></td>
        </tr>
        <tr>
          <td>セットリスト</td>
          <td><%= @event.setlist %></td>
        </tr>
        </table>
      </div>
    </div>
    <div class="row">
    <div class="col-md-6 d-flex justify-content-center">
      <%= link_to "編集", edit_event_path(@event.id), class: "btn btn-success mr-2" %>
      <%= link_to "削除", event_path(@event), method: :delete, "data-confirm" =>"本当に消しますか？", class: "btn btn-danger ml-2" %>
</div>