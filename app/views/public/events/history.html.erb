<div class='container-fluid h-100' style="background-color: #000000;">
  <% if flash[:notice] %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  <div class="row">
    <h3 class="col-md-6 offset-3 my-3 text-center" style="color: #FFFFFF">参戦履歴</h3>
  </div>

  <%= form_with url: history_events_path, method: :get do |f| %>
  <div class="row">
    <div class="col-md-6 offset-3 mt-3 text-center" style="color: #FFFFFF">
     <%= f.date_field :start_data %> ~ <%= f.date_field :end_data %> <%= f.submit'検索'%>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-6 offset-3 mt-3 d-flex justify-content-center">
      <table class="table table-bottom-boder" style="color: #FFFFFF">
        <thead>
        <tr>
        <th>Data</th>
        <th>Artist</th>
        </tr>
      </thead>
      <% @events.each do |event| %>
        <tr>
          <td>
          <%= link_to event_path(event.id), class: "link" do %>
          <%= l event.start, format: :long %>
          <% end %>
          </td>
          <td>
          <%= event.name %>
          </td>
          <td><%= event.status %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row d-flex aline-items-center justify-content-center">
    <div class="col-md-6 mt-3 offset-3 text-center" style="color: #FFFFFF">
      <%= paginate @events %>
    </div>
  </div>
</div>