<div class="container">
  <% if flash[:notice] %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  <div class="row">
    <h3 class="col-md-6 text-center">参戦履歴</h3>
  </div>

  <%= form_with url: history_events_path, method: :get do |f| %>
  <div class="row">
    <div class="col-md-6 my-3">
     <%= f.date_field :start_data %> ~ <%= f.date_field :end_data %> <%= f.submit'検索'%>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-6 d-flex justify-content-center">
      <table class="table table-bottom-boder">
        <thead>
        <tr>
        <th>Data</th>
        <th>Artist</th>
        </tr>
      </thead>
      <% @events.each do |event| %>
        <tr>
          <td>
          <%= link_to event_path(event.id) do %>
          <%= l event.start, format: :long %>
          <% end %>
          </td>
          <td>
          <%= event.name %>
          </td>
          <td><%= event.status %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 text-center">
      <%= paginate @events %>
    </div>
  </div>
</div>