<div class="container">
  <% if flash[:notice] %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  <div class="row">
    <h3 class="col-md-6 my-3 offset-3 text-center"><%= @user.name %>さんの会員情報</h3>
  </div>

  <div class="row">
    <div class="col-md-6 mt-3 offset-3 text-center">
      <%= image_tag @user.get_profile_image(100,100), class: "text-center" %>
      <table class="table table-boderless">
        <tr>
          <td>ユーザー名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <% unless @user.guest_user? %>
  <div class="row">
    <div class="col-md-6 d-flex justify-content-center">
      <%= link_to "編集", edit_user_path(@user.id), class: "btn btn-success mx-2" %>
      <%= link_to "パスワード変更", edit_user_password_path, class: "btn btn-primary mx-2" %>
      <%= link_to "退会する", user_path(current_user.id), method: :delete, "data-confirm" =>"本当に消しますか？", class: "btn btn-danger mx-2" %>
    </div>
  </div>
  <% else %>
  <div class="row d-flex justify-content-center">
    <%= link_to "",edit_user_path(@user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{@user.id} w-25" %>
  </div>
  <% end %>
</div>