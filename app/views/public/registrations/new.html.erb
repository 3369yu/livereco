<div class='container'>
  <div class= 'row'>
    <h2 class= 'col-md-8 my-3 text-center'>Sign up</h2>
  </div>
    
    <%= form_with model:@user, url: user_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class= 'row'>
        <div class= 'col-md-8 my-3 text-center'>
          <%= f.label :"名前(ニックネーム可)" %><br>
          <%= f.text_field :name, autofocus: true %>
        </div>
      </div>

      <div class= 'row'>
        <div class= 'col-md-8 my-3 text-center'>
        <%= f.label :"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class= 'row'>
        <div class= 'col-md-8 my-3 text-center'>
        <%= f.label :"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class= 'row'>
        <div class= 'col-md-8 my-3 text-center'>
        <%= f.label :"パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class= 'row'>
        <div class= 'col-md-8 my- text-center'>
        <%= f.submit "Sign up", class:"btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <div class= 'row'>
      <div class= 'col-md-8 my-3 text-center'>
        <%= render "public/shared/links" %>
      </div>
    </div>
</div>
