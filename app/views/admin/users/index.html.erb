<div class='container-fluid h-100' style="background-color: #000000;">
  <% if flash[:notice] %>
    <div class="alert alert-light"><%= notice %></div>
  <% end %>
  <div class="row">
    <h3 class="col-md-4 my-3 offset-md-4 text-center" style="color: #FFFFFF">ユーザー一覧</h3>
  </div>

  <div class="row">
    <div class="col-md-4 mb-3 offset-4" style="color: #FFFFFF">
      <table class="table table-bottom-boder" style="color: #FFFFFF">
        <thead>
        <tr>
        <th></th>
        <th>ユーザー名</th>
        </tr>
        </thead>
        <% @users.each do |user| %>
        <tr>
          <td>
          <%= link_to admin_user_path(user.id) do %>
          <%= image_tag user.get_profile_image(50,50) %>
          <% end %>
          </td>
          <td>
          <%= link_to admin_user_path(user.id) do %>
          <%= user.name %>
          <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row d-flex aline-items-center justify-content-center">
    <div col="col-md-4 offset-4 md-3" style="color: #FFFFFF">
      <%= paginate @users %>
    </div>
  </div>
</div>