<div class='container-fluid h-100' style="background-color: #000000;">
  <div class="row">
    <h3 class="col-md-4 my-3 offset-4 text-center" style="color: #FFFFFF"><%= @user.name %>さんの詳細</h3>
  </div>

  <div class="row">
    <div class="col-md-4 my-3 offset-4">
      <table class="table table-boderless" style="color: #FFFFFF">
        <tr>
          <td><%= image_tag @user.get_profile_image(50,50) %></td>
          <td><%= @user.name %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-3 d-flex justify-content-center" >
      <%= link_to "編集", edit_admin_user_path(@user.id), class: "btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 my-3 offset-4 d-flex justify-content-center">
      <%= link_to "戻る",admin_users_path %>
    </div>
  </div>
</div>
