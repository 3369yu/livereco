<div class="container">
  <div class="row">
    <h3 class="col-md-6 text-center"><%= @user.name %>さんの詳細</h3>
  </div>
  
  <div class="row">
    <div class="col-md-6 d-flex justify-content-center">
      <%= @user.image %>
      <table class="table table-boderless">
        <tr>
          <td><%= @user.name %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 d-flex justify-content-center">
      <%= link_to "編集", edit_admin_user_path(@user.id), class: "btn btn-success mr-2" %>
    </div>
  </div>
</div>
