<div class='container-fluid h-100' style="background-color: #000000;">
  <div class="row">
    <h3 class="col-md-4 my-3 offset-4 text-center" style="color: #FFFFFF"><%= @user.name %>さんの会員情報編集</h3>
  </div>

  <div class="row">
    <div class="col-md-4 my-3 offset-4 d-flex justify-content-center" style="color: #FFFFFF">
      <%= form_with model: @user, url:  admin_user_path, method: :patch do |f| %>
      <table class="table table-borderless" style="color: #FFFFFF">
        <tr>
          <td>ユーザー名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 my-3 offset-4 d-flex justify-content-center">
      <%= f.submit "保存", class: "btn btn-primary md-3" %>
      <%= link_to "退会する",admin_user_path(@user.id), method: :delete, "data-confirm" =>"本当に退会しますか？", class: "btn btn-danger ml-2" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 my-3 offset-4 d-flex justify-content-center">
      <%= link_to "戻る",admin_user_path(@user.id) %>
    </div>
  </div>
  <% end %>
</div>
