<div class="container">
  <div class="row">
    <h3 class="col-md-6 text-center"><%= @user.name %>さんの会員情報編集</h3>
  </div>
  
  <div class="row">
    <div class="col-md-6 d-flex justify-content-center">
      <%= form_with model: @event do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>ユーザー名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 d-flex justify-content-center">
      <%= f.submit "保存", class: "btn btn-primary" %>
      <%= link_to "退会する", '/users/unsubscribe', class:"btn btn-danger" %>
    </div>
  </div>
  <% end %>>
</div>
